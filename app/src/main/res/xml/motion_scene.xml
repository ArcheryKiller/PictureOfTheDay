<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@layout/fragment_main_start_motion"
        app:constraintSetEnd="@layout/fragment_main_end_motion"
        app:duration="1000">

        <OnClick
            app:targetId="@+id/btnWiki" />
    </Transition>

    <Transition
        app:constraintSetStart="@layout/fragment_main_end_motion"
        app:constraintSetEnd="@layout/fragment_main_start_motion"
        app:duration="1000">

        <OnClick
            app:targetId="@+id/pictureOfTheDayViewPager" />
    </Transition>

</MotionScene>